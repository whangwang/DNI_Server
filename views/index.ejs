<!DOCTYPE html>
<html>
  <head>
    <style>
      body{
        margin: 0;
        width: 480px;
        height: 320px;
        background-color: white;
        overflow: hidden;
        position: relative;
      }
      .color{
        background-color: gray;
        border-radius: 100%;
        -webkit-filter: blur(55px);
        -moz-filter: blur(55px);
        -o-filter: blur(55px);
        -ms-filter: blur(55px);
        filter: blur(55px);
      }
      .color1{
        background-color: red;
        width: 180px;
        height: 180px;
        position: absolute;
        left: 0;
        top: 0;
      }
      .color2{
        background-color: blue;
        width: 240px;
        height: 240px;
        position: absolute;
        right: 0;
        top: 0;
      }
      .color3{
        background-color: green;
        width: 100px;
        height: 100px;
        position: absolute;
        left: 0;
        bottom: 0;
      }
      .color4{
        background-color: purple;
        width: 220px;
        height: 220px;
        position: absolute;
        right: 0;
        bottom: 0;
      }
      .mask{
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0;
        top: 0;
        z-index: 10;
        background-color: white;
        opacity: 0.4;
      }
    </style>
  </head>
  <body>
    <div class="color color1" style="background-color: <%= HR %>;transform: translate(<%= HR_LOC[0] %>, <%= HR_LOC[1] %>)"></div>
    <div class="color color2" style="background-color: <%= BO %>;transform: translate(<%= BO_LOC[0] %>, <%= BO_LOC[1] %>)"></div>
    <div class="color color3" style="background-color: <%= GSR %>;transform: translate(<%= GSR_LOC[0] %>, <%= GSR_LOC[1] %>)"></div>
    <div class="color color4" style="background-color: <%= TMP %>;transform: translate(<%= TMP_LOC[0] %>, <%= TMP_LOC[1] %>)"></div>
    <div class="mask"></div>
  </body>
</html>
